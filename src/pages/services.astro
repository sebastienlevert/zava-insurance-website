        </div>
      </div>
    </div>
  </section>

  <!-- Umbrella Insurance -->
  <section class="section section--gray" id="umbrella">
    <div class="container">
      <div class="two-col">
        <div class="two-col__image">
          <img src="https://images.unsplash.com/photo-1534088568595-a066f410bcda?w=600&h=400&fit=crop" alt="Protection umbrella concept" loading="lazy" />
